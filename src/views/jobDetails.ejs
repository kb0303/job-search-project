<div class="container border-rounded job-detail-container mt-3">
	<h3 class="text-center"><b><%= jobs.tech %></b> Oppurtunity at <b class="text-danger"><%= jobs.CompanyName %></b> in <b><%= jobs.place %></b></h3>

	<div class="job-detail-action-btns d-flex align-items-center mt-5">
		<span class="bg-warning p-2 rounded text-black me-5">Actively Hiring <i class="fa-solid fa-arrow-up-right-dots"></i></span>
		<% if(userEmail) { %>
		<a href="/update_job/<%= jobs.id %>"><i title="Edit" class="fa-solid fa-pen-to-square fa-2x text-warning me-4"></i></a>
		<i title="Delete" onclick="deleteProduct('<%= jobs.id %>')" class="fa-solid fa-trash fa-2x text-danger"></i>
		<% } %>
	</div>

	<h4 class="card-title mt-3"><%= jobs.CompanyName %></h4>
	<h5 class="job-card-tech mt-3">Tech: <span class="text-info"><%= jobs.tech %></span></h5>
	<h5 class="job-card-location mt-3"><i class="fa-solid fa-location-dot"></i> <%= jobs.place %></h5>
	<h6 class="job-card-salary mt-3"><i class="fa-solid fa-indian-rupee-sign"></i> <%= jobs.salary %></h6>
	<h6 class="mt-3"><i class="fa-solid fa-hourglass-end"></i> Apply By: <%= new Date(formattedApplyBy).toLocaleDateString() %></h6>
	<h6 class="mt-3"><i class="fa-solid fa-chart-simple"></i> No. of openings - <%= jobs.openings %></h6>
	<h6 class="mt-3"><a href="/applicants/<%= jobs.id %>">Applicants: </a></h6>
	<ul class="job-card-skills mt-3">
		<% jobs.skills.split(',').forEach(skill => { %>
			<li class="me-2 btn btn-outline-tertiary"><%= skill.trim() %></li>
		<% }) %>
	</ul>			
	<button class="btn btn-primary w-25 mt-3" data-bs-toggle="modal"
	data-bs-target="#exampleModal">Apply Now</button>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content bg-black text-white">
			<div class="modal-header ">
				<h1 class="modal-title fs-5" id="exampleModalLabel">Apply For Job</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form action="/job_application" method="post" enctype="multipart/form-data">
					<input type="hidden" class="form-control" id="id" name="id" value="<%= jobs.id %>">
					<div class="mb-3">
						<label for="exampleInputName1" class="form-label">Name</label>
						<input type="text" class="form-control" name="name" id="exampleInputName1"
							aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputEmail1" class="form-label">Email address</label>
						<input type="email" class="form-control" name="email" id="exampleInputEmail1"
							aria-describedby="emailHelp">
					</div>
					<div class="mb-3">
						<label for="exampleInputNumber1" class="form-label">Contact No.</label>
						<input type="tel" class="form-control" name="contactNo" id="exampleInputNumber1">
					</div>
					<div class="mb-3">
						<label for="exampleInputResume1" class="form-label">Resume</label>
						<input type="file" class="form-control" name="resume" id="exampleInputResume1">
					</div>
					<div class="mb-3 form-check">
						<input type="checkbox" class="form-check-input" id="exampleCheck1">
						<label class="form-check-label" for="exampleCheck1">Check me out</label>
					</div>
					<button type="submit" class="btn btn-primary">Apply Now</button>
				</form>
			</div>
		</div>
	</div>
</div>